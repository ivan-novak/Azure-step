@{
    ViewData["Title"] = "Analysis";
}

<div>
    <h1 class="display-4 text-center">Сравнительный анализ SQL и NoSQL Баз данных</h1>
</div>
<br />
<br />
<div>
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th scope="col">База данных</th>
                <th scope="col">Имя</th>
                <th scope="col">Коментарий</th>
                <th scope="col">Дата/Время</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewData["Analysis"] != null)
            {
                @foreach (var analysis in (WebApplication1.Models.AnalysisDB[])ViewData["Analysis"])
                {
                    <tr>
                        <td>@analysis.nameDb </td>
                        <td>@analysis.nameUser</td>
                        <td>@analysis.comments</td>
                        <td>@(analysis.date.Date == @DateTime.Now.Date ? analysis.date.TimeOfDay.ToString().Substring(0,8) : analysis.date)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<br />
<hr />
<form method="post" action="/Home/ComparativeAnalysisDB">
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" name="nameUser" class="form-control" id="inputName" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputComments" class="col-sm-2 col-form-label">Comments</label>
        <div class="col-sm-10">
            <input type="text" name="comments" class="form-control" id="inputComments" placeholder="Comments">
        </div>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="nameDb" id="exampleRadios1" value="SQL" checked>
        <label class="form-check-label" for="exampleRadios1">
            SQL
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="nameDb" id="exampleRadios2" value="NoSQL">
        <label class="form-check-label" for="exampleRadios2">
            NoSQL
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="nameDb" id="exampleRadios3" value="General">
        <label class="form-check-label" for="exampleRadios3">
            General
        </label>
    </div><br />
    <br />
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>
<br />
<hr />

